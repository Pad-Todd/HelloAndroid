<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentcallback.FragmentCallbackMainActivity"
    android:orientation="vertical">
    <fragment
        android:id="@+id/fragment_color_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.professionalandroid.apps.androidlevelup.fragmentcallback.ColorListFragment">
    </fragment>
    <fragment
        android:id="@+id/fragment_color"
        android:name="com.professionalandroid.apps.androidlevelup.fragmentcallback.ColorFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></fragment>
</LinearLayout>